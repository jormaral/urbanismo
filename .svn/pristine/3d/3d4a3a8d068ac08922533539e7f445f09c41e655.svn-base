.toolBar {
    top: 60px;
    height: 25px;
    left: 10px;
    top: 7px;
    position: absolute;
    /*width: 200px;*/
    z-index: 5000;
    background-position: center center;
    float:left;
}
.sliderKnobOpacity {
    position: absolute;
    top: 0;
    left: 0;
    height: 9px;
    width: 19px;
    font-size: 1px;
    line-height: 1px;
    background: url(img/knobOpacity.gif) no-repeat;
    cursor: pointer;
    overflow: hidden;
    z-index: 2;
}
.sliderAreaOpacity {
    position: relative;
    top: 0;
    left: 0; 
    height: 9px;
    width: 180px;
    font-size: 1px;
    line-height: 1px;
    background: #F2F2F2 url(img/sliderAreaOpacity.gif) repeat-x;
    border: 1px solid #A3A3A3;
    border-bottom: 1px solid #CCC;
    border-left: 1px solid #CCC;
    margin: 0;
    padding: 0;
    overflow: hidden;
    float: right;
}
#toolZoomIn {	
    background-image: url("img/zoomin.png");
    cursor: pointer;
    height: 18px;
    margin-top: 2px;
    margin-left: 2px;
    width: 18px;
    background-repeat: no-repeat;
}
#toolZoomOut {
    background-image: url("img/zoomout.png");
    cursor: pointer;
    height: 18px;
    margin-top: 2px;
    margin-left: 2px;
    width: 18px;
    background-repeat: no-repeat;
}
#toolPan {
