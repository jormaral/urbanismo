<div class="toolbarTabs">
	<ul id="panelValidacionesTabs" class="tab-menu">
		<li id='tabValidacionesPendientes' class="selected"><a id="validacionesPendientes" href="Pages/ValidadorFIP/ValidacionData.html" title="Validaciones pendientes">Validaciones pendientes</a></li>
		<li id='tabValidacionesRealizadas'><a id="validacionesRealizadas" href="Pages/ValidadorFIP/ValidacionData.html" title="Validaciones Realizadas">Validaciones Realizadas</a></li>
	</ul>
	<div class="clear"></div>
</div>

<script type="text/javascript">

	$('validacionesPendientes').addEvent('click', function(e){
		new Event(e).stop();

		$('panelValidacionesPendientes').setStyle('display', 'block'); //setOpacity(100);
		$('panelValidacionesRealizadas').setStyle('display', 'none'); //setOpacity(0);
		
		$('tabValidacionesPendientes').set('class','selected');
		$('tabValidacionesRealizadas').set('class','');

		MUI.rWidth();
    });

	$('validacionesRealizadas').addEvent('click', function(e){
		new Event(e).stop();	

		$('panelValidacionesPendientes').setStyle('display', 'none'); //setOpacity(0);
		$('panelValidacionesRealizadas').setStyle('display', 'block'); //setOpacity(100);		
		
		$('tabValidacionesPendientes').set('class','');
		$('tabValidacionesRealizadas').set('class','selected');

		chargeTabValidacionesRealizadas();
		
		MUI.rWidth();
    });

</script>