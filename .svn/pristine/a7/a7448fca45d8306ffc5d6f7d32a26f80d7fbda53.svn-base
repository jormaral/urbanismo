#===========================================================================
# allowed DPIs
#===========================================================================
dpis: [254, 190, 127, 56]

#===========================================================================
# allowed Formats
#===========================================================================
formats: [*]


#===========================================================================
# the allowed scales
#===========================================================================
scales:
  - 500
  - 1000
  - 5000
  - 10000
  - 20000
  - 25000
  - 50000
  - 100000
  - 200000

#===========================================================================
# the list of allowed hosts
#===========================================================================
hosts:
  - !ipMatch
    ip: 0.0.0.0
    mask: 0.0.0.0

#===========================================================================
# optional parameters
#===========================================================================
tilecacheMerging: true
#connectionTimeout: 30000
#socketTimeout: 180000
outputFilename: 'UrbanismoEnRed'

