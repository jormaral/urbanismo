    #-------------------------------------------------------------------------
    mainPage:
      pageSize: A4
      rotation: true
      landscape: false
#      marginLeft: 20
#      marginRight: 20
#      marginTop: 20
#      marginBottom: 20
      header:
        height: 50
        items:
          - !text
            font: Helvetica
            fontSize: 30
            align: center
            text: '${mapTitle}'
          - !image
            maxWidth: 402
            maxHeight: 200
            align: left
            url: 'File:////../../../../${configDir}/../var/images/derecha.png'
          - !image
            maxWidth: 402
            maxHeight: 200
            align: right
            url: 'File:////${configDir}/small-logo-camptocamp2.png'
      items:
        - !columns
          # columns can have an absolute position. In that case, they need the 3 following fields:
          absoluteX: 25
          absoluteY: 780
          width: 545
          items:
            - !map
              align: center
              width: 545
              height: 600
        - !columns
          # columns can have an absolute position. In that case, they need the 3 following fields:
          absoluteX: 370
          absoluteY: 170
          width: 200
          items:
            - !text
                font: Helvetica
                fontSize: 9
                align: center
                text: '1 : ${scale}'
        - !columns
          # columns can have an absolute position. In that case, they need the 3 following fields:
          absoluteX: 370
          absoluteY: 155
          width: 200
          items:
            - !scalebar
              type: bar_sub
              maxSize: 200
              barBgColor: white
              fontSize: 8
              align: right
        - !columns
          # columns can have an absolute position. In that case, they need the 3 following fields:
          absoluteX: 25
          absoluteY: 170
          width: 340
          items:
            - !text
              text: '${comment}'
              
        
